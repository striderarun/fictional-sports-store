<?xml version="1.0" encoding="UTF-8"?> 
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
 updateCheck="true"
 monitoring="autodetect" 
 dynamicConfig="true">    
 
 	<diskStore path="java.io.tmpdir" />
  	<defaultCache eternal="true" maxElementsInMemory="500" overflowToDisk="false" /> 
  	<cache name="messages" maxElementsInMemory="50" eternal="false" overflowToDisk="false" timeToIdleSeconds="7" timeToLiveSeconds="15"/>

</ehcache>